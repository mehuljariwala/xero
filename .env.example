# Xero Report Automation Configuration

# Xero OAuth 2.0 Credentials (from developer.xero.com)
XERO_CLIENT_ID=your_client_id_here
XERO_CLIENT_SECRET=your_client_secret_here

# Xero Login Credentials (will be prompted on first run if empty)
XERO_EMAIL=
XERO_PASSWORD=

# Path to stored tokens and session
TOKENS_PATH=./tokens.json
SESSION_STATE_PATH=./session_state.json

# Legacy: Path to exported cookies JSON file
COOKIES_PATH=./cookies.json

# Directory for downloaded reports
DOWNLOAD_DIR=./downloads

# Browser settings
HEADLESS=true
SLOW_MO=0

# Timeouts (in milliseconds)
NAVIGATION_TIMEOUT=30000
DOWNLOAD_TIMEOUT=60000

# Default report settings
DEFAULT_PERIOD=End of last month
DEFAULT_FORMAT=excel
